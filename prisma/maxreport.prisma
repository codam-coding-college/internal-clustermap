datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Location {
    id              Int @id
    created_at      DateTime?
    updated_at      DateTime?
    deleted_at      DateTime?
    login           String?
    hostname        String?
    location_id     Int?
    host_id         Int?
    begin_at        DateTime?
    end_at          DateTime?

    @@map("locations")
}

model Host {
    id              Int @id
    created_at      DateTime?
    updated_at      DateTime?
    deleted_at      DateTime?
    ip_address      String? @unique
    hostname        String? @unique
    alive           Boolean?
    checkable       Boolean?

    @@map("hosts")
}
